<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FC3F88EB">

        <Button
            android:id="@+id/BtnReturnToDay"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="이전" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="운동기구 선택하기"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text=" *상체 운동기구(파랑) : 펙덱머신 , 하이풀 머신 \n *하의 운동기구(빨강) : 런닝머신 , 사이클 머신 , 레그프레스\n ## 런닝머신 제외 모두 30분씩 이용가능 "
        android:textSize="13dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="창가"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"/>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TableRow>
            <Button
                android:layout_weight="1"
                android:enabled="false"
                android:background="@android:color/transparent"/>

            <Button
                android:id="@+id/BtnNum0"
                android:layout_weight="1"
                android:background="@drawable/exercise4" />

            <Button
                android:id="@+id/BtnNum1"
                android:layout_weight="1"
                android:background="@drawable/exercise4" />

            <Button
                android:id="@+id/BtnNum2"
                android:layout_weight="1"
                android:background="@drawable/exercise4" />

            <Button
                android:id="@+id/BtnNum3"
                android:layout_weight="1"
                android:background="@drawable/exercise4" />

            <Button
                android:id="@+id/BtnNum4"
                android:layout_weight="1"
                android:background="@drawable/exercise4" />

            <Button
                android:layout_weight="1"
                android:enabled="false"
                android:background="@android:color/transparent"/>
        </TableRow>

        <TableRow>
            <Button
                android:layout_weight="1"
                android:id="@+id/BtnNum5"
                android:background="@drawable/exercise1"
                android:text="6"/>

            <Button
                android:layout_weight="1"
                android:enabled="false"
                android:background="@android:color/transparent"/>

            <Button
                android:id="@+id/BtnNum6"
                android:layout_weight="0.5"
                android:background="@drawable/exercise5" />

            <Button
                android:layout_weight="1"
                android:enabled="false"
                android:background="@android:color/transparent"/>

            <Button
                android:layout_weight="1"
                android:enabled="false"
                android:background="@android:color/transparent"/>

            <Button
                android:id="@+id/BtnNum7"
                android:layout_weight="0.5"
                android:background="@drawable/exercise5" />

            <Button
                android:layout_weight="1"
                android:enabled="false"
                android:background="@android:color/transparent"/>

            <Button
                android:id="@+id/BtnNum8"
                android:layout_weight="1"
                android:background="@drawable/exercise1"
                android:text="9"/>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/BtnNum9"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/exercise6"
                android:text="10" />

            <Button
                android:layout_weight="1"
                android:enabled="false"
                android:background="@android:color/transparent"/>

            <Button
                android:id="@+id/BtnNum10"
                android:layout_weight="1"
                android:background="@drawable/exercise5" />

            <Button
                android:layout_weight="1"
                android:enabled="false"
                android:background="@android:color/transparent"/>
            <Button
                android:id="@+id/BtnNum11"
                android:layout_weight="1"
                android:background="@drawable/exercise6"/>


        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/BtnNum12"
                android:layout_weight="1"
                android:background="@drawable/exercise2" />

            <Button
                android:id="@+id/BtnNum13"
                android:layout_weight="1"
                android:background="@drawable/exercise2" />
            <Button
                android:id="@+id/BtnNum14"
                android:layout_weight="1"
                android:background="@drawable/exercise3"/>
            <Button
                android:id="@+id/BtnNum15"
                android:layout_weight="1"
                android:background="@drawable/exercise3"/>
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="안쪽"
            android:gravity="center_horizontal"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="선택한 날짜와 시간 :" />

            <TextView
                android:id="@+id/tvYear2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="  0000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="년" />

            <TextView
                android:id="@+id/tvMonth2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="월" />

            <TextView
                android:id="@+id/tvDay2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="일" />

            <TextView
                android:id="@+id/tvHour2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="시" />

            <TextView
                android:id="@+id/tvMinute2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="분" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="선택한 자리 : " />
            <TextView
                android:id="@+id/Seat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="운동기구 : " />
            <TextView
                android:id="@+id/Personnel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="성함 : " />
            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="연락처 : " />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="" />

        </LinearLayout>

        <Button
            android:id="@+id/BtnNext"
            android:layout_width="114dp"
            android:layout_height="71dp"
            android:layout_gravity="center_horizontal"
            android:text="다음" />

    </LinearLayout>

</LinearLayout>